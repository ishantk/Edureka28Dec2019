<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <bean id="fRef" class="co.edureka.bean.FoodItem">
       <property name="name" value="Veggie Pizza"/>
       <property name="price" value="300"/>
   </bean>

   <bean id="rRef" class="co.edureka.bean.Restaurant" >
       <property name="name" value="Johns Coffe Shop"/>
       <property name="phone" value="+91 99999 88888"/>
       <property name="operatingHours" value="10:00 to 23:00"/>
       <property name="reviews" value="4.5"/>
       <property name="pricePerPerson" value="200"/>
       <!-- <constructor-arg ref="fRef"/> --> 	<!-- Constructor Injection -->
       <property name="item" ref="fRef"/>		<!-- Setter Injection -->
       
       <!-- Setter Injection 1 to many-->
       <property name="departments">
	       	<list>
	       		<value>Admin</value>
	       		<value>Account</value>
	       		<value>HR</value>
	       		<value>Sales</value>
	       		<value>Marketing</value>
	       	</list>
       </property>
       
   </bean>
  

</beans>